{
  "name": "wyy",
  "version": "1.0.0",
  "description": "React music player",
  "keywords": [
    "react"
  ],
  "main": "src/client.tsx",
  "homepage": "https://neteasecloudmusic.fun",
  "bugs": {
    "url": "https://github.com/q673115816/react-wyy-music-pc/issues",
    "email": "673115816@qq.com"
  },
  "license": "",
  "author": {
    "name": "linjinjun",
    "email": "673115816@qq.com"
  },
  "scripts": {
    "build": "pnpm -r run build",
    "clean": "pnpm -r exec rm -rf node_modules",
    "view": "pnpm -rc exec pnpm view $PNPM_PACKAGE_NAME",
    "web:build": "pnpm -r run build --filter @wyy/web",
    "web:start": "pnpm -r run start --filter @wyy/web"
  },
  "dependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@types/react": "*",
    "@types/react-dom": "*",
    "typescript": "*",
    "prettier": "*"
  },
  "engines": {
    "node": ">=10",
    "pnpm": ">=3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "eslint --cache --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
